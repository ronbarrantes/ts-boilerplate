{
  "name": "ts-boilerplate",
  "version": "1.0.0",
  "description": "This has a VERY basic boilerplate",
  "private": true,
  "scripts": {
    "start": "nodemon dist/main.js",
    "clean": "rm -rf ./dist",
    "build": "clean & tsc",
    "watch": "tsc -w",
